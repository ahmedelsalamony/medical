<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switchcomptMange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:gravity="left" />


        <LinearLayout
            android:id="@+id/layout_nameserial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/DepName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="احمد عبدالحميد شعبان السلامونى"
                android:padding="4dp"
                />

            <TextView
                android:id="@+id/txt_serialDepName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="1"
                />


        </LinearLayout>
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/layout_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_date"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"

        >

        <Button
            android:id="@+id/btn_deleteAddMangment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:text="حذف الاجراء"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_marginRight="3dp"
            />

        <Button
            android:id="@+id/btn_editAddMangment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="تعديل الاجراء"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:padding="8dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/layout_delete"
        android:background="#303F9F"
        android:padding="2dp"></LinearLayout>

</LinearLayout>
